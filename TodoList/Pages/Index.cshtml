@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Due</th>
            <th scope="col">Title</th>
            <th>Action</th>
        </tr>      
    </thead>
    <tbody>
        @foreach (var item in Model.Todos)
        {
            <tr class='@(item.IsDone ? "bg-success" : item.Due.CompareTo(DateTime.Now) > 0 ? "" : "bg-danger")'>
                <td>@item.Id</td>
                <td>@item.Due</td>
                <td>@item.Title</td>
                <td>
                    <a href="edit/@item.Id" class="btn btn-outline-primary btn-sm">Edit</a> |
                    <a href="delete/@item.Id" class="btn btn-outline-warning btn-sm">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>